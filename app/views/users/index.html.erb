<% if flash[:notice] %>
    <div class="notice">
        <%= flash[:notice] %>
    </div>
<% end %>

<h1>User List</h1>

<ul>
<% for user in @users do %>
<li>
    <strong>Name:</strong> <%= user.name %><br>
    <strong>Email:</strong> <%= user.email %><br>
    <strong>Joined:</strong> <%= user.created_at.strftime("%B %d, %Y") %><br>
    <a href="/users/<%= user.id %>">View User</a><br>
    <a href="/users/<%= user.id %>/edit">Edit User</a><br>
    <%= button_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "delete-button" %>
</li>
<% end %>
</ul>
<a href="users/new">Create New User<a>